 general {

colors = true

interval = 5

}
order += "disk /"

order += "ethernet _first_"

order += "load"

order += "tztime local"


ethernet _first_ {

# if you use %speed, i3status requires root privileges

format_up = "E: %ip"

format_down = "E: down"

}


tztime local {

format = "%d-%m-%Y %H:%M"

}

load {

format = "load:%1min"

}

disk "/" {

format = "%avail"

}
